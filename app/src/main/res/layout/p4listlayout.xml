<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView android:layout_height="50dp" android:layout_width="50dp"
         android:id="@+id/image_id"/>

    <TextView android:gravity="center_vertical" android:layout_height="match_parent"
        android:layout_width="0dp" android:id="@+id/name" android:paddingStart="10dp" android:paddingEnd="10dp"
        android:textColor="@color/purple_700" android:textSize="25sp" android:layout_weight="1"/>

    <Button android:layout_height="50dp" android:layout_width="100dp" android:id="@+id/delete_btn" android:text="Delete"
        />
</LinearLayout>