<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".P4CompleteAppAddDeleteRunTime">

    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent">

    <EditText android:layout_height="wrap_content" android:layout_width="0dp" android:hint="Add OS Name"
        android:textColor="@color/black" android:textSize="20sp" android:paddingEnd="10dp" android:paddingStart="10dp"
        android:id="@+id/input" android:layout_weight="1"/>

    <Button android:layout_height="wrap_content" android:layout_width="100dp" android:text="Add"
        android:onClick="addData"/>

      </LinearLayout>


    <ListView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/custom_lv"/>
</LinearLayout>